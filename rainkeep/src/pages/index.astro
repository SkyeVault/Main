---
import '../styles/tailwind.css';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Arynwood Terminal</title>
  <style>
    body {
      margin: 0;
      padding: 2rem;
      background-color: #0e0e0e;
      color: #dcdcdc;
      font-family: 'JetBrains Mono', monospace;
    }

    .terminal {
      max-width: 800px;
      margin: auto;
      background-color: #121212;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(185, 170, 255, 0.2);
    }

    .prompt {
      color: #b9aaff;
    }

    .output {
      margin-bottom: 1rem;
    }

    .command-input {
      background: none;
      border: none;
      color: #dcdcdc;
      font: inherit;
      width: 100%;
      outline: none;
    }

    .gui-toggle {
      margin-top: 2rem;
      color: #888;
      cursor: pointer;
      font-size: 0.9rem;
      text-align: right;
    }

    .gui-toggle:hover {
      color: #b9aaff;
    }

    /* LINK FIX: Injected link styles */
    .terminal .output a {
      all: unset;
      color: #b9aaff;
      text-decoration: underline;
      cursor: pointer;
    }

    .terminal .output a:hover {
      color: #ff99cc;
    }
  </style>
</head>
<body>
  <div class="terminal">
    <div class="output">$ <span class="prompt">whoami</span></div>
    <div class="output">Lorelei Noble — full-stack developer, artist, architect of Arynwood. <a href="/lorelei">Read more...</a>  </div>
    <div class="output">Type <span class="prompt">help</span> or try commands like <span class="prompt">projects</span>, <span class="prompt">blog</span>, <span class="prompt">artwork</span>, or <span class="prompt">contact</span>.</div>
    
    <div class="output">$ <input class="command-input" id="command" type="text" placeholder="Type a command..." autofocus></div>
    
    <a href="https://www.arynwood.com/classic" class="gui-toggle block">
  [ Switch to classic view ]
</a>


  <script>
    const input = document.getElementById('command');
    input.addEventListener('keydown', function(event) {
      if (event.key === 'Enter') {
        const cmd = input.value.trim().toLowerCase();
        let response = '';

        switch (cmd) {
          case 'help':
            response = 'Available commands: whoami, <a href="/projects">projects</a>, <a href="/blog">blog</a>, <a href="/contact">contact</a>, <a href="/syrenwork">artwork</a>';
            break;
          case 'whoami':
            response = 'Lorelei Noble — full-stack developer, artist, architect of Arynwood. <a href="/lorelei">Read more...</a>.';
            break;
          case 'projects':
            response = '<a href="/projects">Spotify Playlist Maker</a>, <a href="/projects">NFT Collection</a>, <a href="/gallery3d">3D Metaverse Gallery</a>';
            break;
          case 'blog':
            response = 'Read the blog: <a href="/blog">DevLogs</a>';
            break;
          case 'contact':
            response = 'Email: <a href="mailto:loreleihnoble@gmail.com">Gmail</a> | LinkedIn: <a href="https://www.linkedin.com/in/lorelein/">LinkedIn</a> | GitHub: <a href="https://github.com/SkyeVault" target="_blank">SkyeVault</a>';
            break;
          case 'artwork':
            response = 'Explore the gallery: <a href="https://arynwood.com/syrenwork" target="_blank">Syrenwork Gallery</a>';
            break;
          default:
            response = `Command not found: ${cmd}`;
        }

        const terminal = document.querySelector('.terminal');
        const newOutput = document.createElement('div');
        newOutput.className = 'output';
        newOutput.innerHTML = `$ <span class="prompt">${cmd}</span><br>${response}`;
        terminal.insertBefore(newOutput, input.parentNode);

        input.value = '';
      }
    });
  </script>
<!-- Devicon stylesheet -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">

<style>
  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding: 2rem;
    justify-content: center;
    background: #0d0f1c;
  }

  .tech-icon {
    text-align: center;
    font-family: 'Courier New', monospace;
    color: #c9c7ff;
  }

  .tech-icon i,
  .tech-icon img {
    font-size: 48px;
    width: 48px;
    height: 48px;
    display: block;
    margin: 0 auto 0.5rem;
  }
</style>

<div class="tech-icons">
  <!-- JavaScript -->
  <div class="tech-icon">
    <i class="devicon-javascript-plain colored"></i>
    JavaScript
  </div>

  <!-- HTML5 -->
  <div class="tech-icon">
    <i class="devicon-html5-plain colored"></i>
    HTML
  </div>

  <!-- CSS3 -->
  <div class="tech-icon">
    <i class="devicon-css3-plain colored"></i>
    CSS
  </div>

  <!-- Python -->
  <div class="tech-icon">
    <i class="devicon-python-plain colored"></i>
    Python
  </div>

  <!-- Rust -->
  <div class="tech-icon">
    <i class="devicon-rust-plain colored"></i>
    Rust
  </div>

  <!-- Bash/Shell -->
  <div class="tech-icon">
    <i class="devicon-bash-plain colored"></i>
    Shell
  </div>

  <!-- Solidity (via Iconify fallback) -->
  <div class="tech-icon">
    <img src="https://api.iconify.design/logos:solidity.svg" alt="Solidity">
    Solidity
  </div>

  <!-- Three.js (via Iconify) -->
  <div class="tech-icon">
    <img src="https://api.iconify.design/logos:threejs.svg" alt="Three.js">
    Three.js
  </div>
</div>

</body>
</html>
