---
// index.astro
import '../../styles/tailwind.css';

const posts = [
  {
    title: 'Devlog 01 — Entering the Rainkeep',
    url: '/blog/devlog-01',
    date: '2025-04-05',
    excerpt: 'The first echoes of the Arynwood project, glowing in lavender dusk...',
  },
  {
    title: 'Devlog 02 — Sculpting in Solidity',
    url: '/blog/devlog-02',
    date: '2025-04-02',
    excerpt: 'Deployments to the Amoy testnet, and the birth of LoreleiNobleGenesis.',
  },
  // Add more posts as needed...
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Rainkeep Blog — Arynwood Terminal</title>
    <style>
      body {
        margin: 0;
        padding: 2rem;
        background-color: #0e0e0e;
        color: #dcdcdc;
        font-family: 'JetBrains Mono', monospace;
      }

      .terminal {
        max-width: 850px;
        margin: auto;
        background-color: #121212;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(185, 170, 255, 0.15);
      }

      .blog-title {
        font-size: 1.8rem;
        color: #b9aaff;
        margin-bottom: 1.5rem;
      }

      .post {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #333;
      }

      .post-title {
        font-size: 1.25rem;
        color: #b9aaff;
        margin-bottom: 0.25rem;
      }

      .post-title a {
        text-decoration: none;
        color: #b9aaff;
      }

      .post-title a:hover {
        color: #ff99cc;
      }

      .post-date {
        font-size: 0.875rem;
        color: #888;
        margin-bottom: 0.5rem;
      }

      .post-excerpt {
        color: #ccc;
        font-size: 1rem;
      }

      .back-link {
        margin-top: 2rem;
        display: block;
        text-align: right;
        color: #888;
      }

      .back-link:hover {
        color: #b9aaff;
      }
    </style>
  </head>
  <body>
    <div class="terminal">
      <div class="blog-title">$ rainkeep blog</div>

      {posts.map(post => (
        <div class="post">
          <div class="post-title">
            <a href={post.url}>{post.title}</a>
          </div>
          <div class="post-date">{post.date}</div>
          <div class="post-excerpt">{post.excerpt}</div>
        </div>
      ))}

      <a href="/" class="back-link">[ return to terminal ]</a>
    </div>
  </body>
</html>