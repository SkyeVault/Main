---
import fs from 'node:fs';
import path from 'node:path';

// Path to the folder with the converted HTML files
const blogHtmlDir = path.resolve('rainkeep/static/blog-html');

// Read all .html files in the directory
const htmlFiles = fs.readdirSync(blogHtmlDir)
  .filter(file => file.endsWith('.html'));
---

<html lang="en">
  <head>
    <title>Lore Logs</title>
  </head>
  <body>
    <h1>Lore Logs</h1>
    <ul>
      {htmlFiles.map(file => (
        <li>
          <a href={`/blog-html/${file}`} target="_blank" rel="noopener">
            {file.replace('.html', '')}
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
