---
import fs from 'node:fs';
import path from 'node:path';

// Read all .html files from /public/blog-html
const blogHtmlDir = path.resolve('public/blog-html');
const htmlFiles = fs.readdirSync(blogHtmlDir)
  .filter(file => file.endsWith('.html'))
  .sort(); // optional: alphabetical
---

<html lang="en">
  <head>
    <title>LORE LOGS TERMINAL</title>
    <meta charset="utf-8" />
    <style>
      body {
        background-color: #0d0f1c;
        color: #c9c7ff;
        font-family: 'Courier New', monospace;
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
      }

      h1 {
        color: #b48eff;
        text-shadow: 0 0 4px #b48eff;
        font-size: 1.5rem;
        text-align: center;
        border-bottom: 1px solid #444;
        padding-bottom: 0.5rem;
        margin-bottom: 2rem;
      }

      ul {
        list-style-type: none;
        padding-left: 0;
      }

      li {
        margin-bottom: 1rem;
      }

      a {
        color: #79b8ff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
        color: #b48eff;
      }

      .prompt {
        color: #888;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <h1>▌ LORE LOGS ▌</h1>
    <ul>
      {htmlFiles.map(file => (
        <li>
          <span class="prompt">> access ./blog-html/{file}</span><br />
          <a href={`/blog-html/${file}`} target="_blank" rel="noopener">
            {file.replace('.html', '')}
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
