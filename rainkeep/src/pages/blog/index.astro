---
const posts = [
  'DevLog250401',
  'DevLog250310',
  'DevLog250324',
  'devlog250301',
  // Add all converted HTML filenames here
];
---

<html lang="en">
  <head>
    <title>Developer Logs</title>
    <style>
      body {
        background-color: #0d0f1c;
        color: #c9c7ff;
        font-family: 'Courier New', monospace;
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
      }
      h1 { color: #b48eff; text-shadow: 0 0 4px #b48eff; }
      a { color: #79b8ff; text-decoration: none; }
      a:hover { text-decoration: underline; color: #b48eff; }
      .prompt { color: #888; font-size: 0.9rem; }
    </style>
  </head>
  <body>
    <h1>▌ Developer Logs ▌</h1>
    <ul>
      {posts.map(file => (
        <li>
          <span class="prompt">> access ./blog-html/{file}.html</span><br />
          <a href={`/blog-html/${file}.html`} target="_blank" rel="noopener">
            {file}
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
