---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<html>
  <head>
    <title>Rainkeep DevLog</title>
  </head>
  <body>
    <h1>Rainkeep DevLog</h1>
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug}`}>{post.data.title || post.slug}</a>
        </li>
      ))}
    </ul>
  </body>
</html>
