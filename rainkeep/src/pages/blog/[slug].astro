---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');

  return allPosts.map((post) => ({
    params: { slug: post.slug }, // âœ… keep using post.slug
    props: { post },
  }));
}

const { post } = Astro.props;
---

<html lang="en">
  <head>
    <title>{post?.data?.title ?? 'Post Not Found'}</title>
  </head>
  <body>
    {post ? (
      <>
        <article style="max-width: 600px; margin: auto;">
          <h1>{post.data.title}</h1>
          <p>{new Date(post.data.date).toDateString()}</p>

          {await post.render()}
        </article>
      </>
    ) : (
      <p style="text-align:center;">Sorry, this post couldn't be found.</p>
    )}
  </body>
</html>

