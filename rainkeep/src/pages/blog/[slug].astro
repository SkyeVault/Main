---
import { getCollection, getEntryBySlug } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);

if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{post.data.title}</title>
  </head>
  <body style="background-color: #0e0e0e; color: #dcdcdc; font-family: 'JetBrains Mono', monospace; padding: 2rem;">
    <article style="max-width: 800px; margin: auto;">
      <h1 style="color: #b9aaff;">{post.data.title}</h1>
      <p style="color: #888;">{post.data.pubDate}</p>
      <p>{post.data.description}</p>
      <div innerHTML={post.body} />
    </article>
  </body>
</html>
