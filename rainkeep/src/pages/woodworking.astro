---
import WoodworkingLayout from '../layouts/WoodworkingLayout.astro';

const metaTitle = 'Woodworking in Newtown | Sculptor and Wood Artist | Bucks County, Pennsylvania';
const metaDescription = 'Original sculptural works in wood. Furniture, metal casting, and modern digital forms. Based in Bucks County, PA with over 20 years of experience.';
const canonicalURL = 'https://arynwood.com/woodworking';
const ogImage = '/images/arynwood-sculpture-og.jpg';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Woodworking in Newtown",
  "description": "Independent sculptural studio specializing in custom wood furniture, metal casting, and digital 3D art with over 20 years of experience.",
  "url": canonicalURL,
  "image": ogImage,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Bucks County",
    "addressRegion": "Pennsylvania",
    "addressCountry": "United States"
  },
  "knowsAbout": [
    "Wood Sculpture",
    "Bronze Casting",
    "3D Digital Art",
    "Custom Furniture",
    "Architectural Woodworking",
    "Fine Art Commissions"
  ],
  "offers": {
    "@type": "Service",
    "serviceType": "Custom Art Commissions",
    "areaServed": "Philadelphia Metro Area"
  }
};
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{metaTitle}</title>
  <meta name="description" content={metaDescription} />
  <meta name="keywords" content="wood sculptor, Bucks County artist, custom wood furniture, bronze sculpture, 3D digital art, Pennsylvania sculptor, fine art commissions, handcrafted furniture, sculptural woodworking, artistic wood carving" />
  <link rel="canonical" href={canonicalURL} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={metaTitle} />
  <meta property="og:description" content={metaDescription} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content="en_US" />
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={metaTitle} />
  <meta property="twitter:description" content={metaDescription} />
  <meta property="twitter:image" content={ogImage} />
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <meta name="robots" content="index, follow" />
  <meta name="author" content="Arynwood Design" />
  <meta name="geo.region" content="US-PA" />
  <meta name="geo.placename" content="Bucks County" />
</head>

<WoodworkingLayout title={metaTitle}>
  <header class="hero-section">
    <h1 class="main-headline">Custom Woodworking, Bronze Casting and 3D Sculpture</h1>
    <p class="hero-subtext">Timeless furniture and sculptural works handcrafted in Bucks County, Pennsylvania. Built with purpose, rooted in tradition, and shaped by modern design.</p>
    <div class="hero-cta">
      <a href="mailto:arynwood@protonmail.com" class="primary-cta">Contact via Email</a>
      <a href="https://arynwood.com" class="secondary-cta">Visit Main Site</a>
    </div>
  </header>

  <!-- Rest of page structure should follow similar styling: emphasize wood, then bronze, then digital. Use placeholder links. -->
</WoodworkingLayout>
</html>