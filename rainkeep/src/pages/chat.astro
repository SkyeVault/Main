---
const title = "Arynwood IRC Chat";
import HamburgerNav from '../layouts/HamburgerNav.astro';
---

<style>
.chat-frame {
  width: 100%;
  height: 1100px;
  border: none;
  margin-top: 1rem;
  border-radius: 6px;
  background-color: #000; /* Optional: dark background */
}
</style>

<HamburgerNav title={title}>
  <iframe
    src="/chat/"
    class="chat-frame"
    loading="lazy"
    title="IRC Chat"
    allowtransparency="true"
  ></iframe>

  <p class="mt-6 text-sm text-gray-400 text-center">
    Return to <a href="/" class="underline">Arynwood Terminal</a>.
  </p>
</HamburgerNav>
