---
const title = "Arynwood IRC Chat";
import HamburgerNav from '../layouts/HamburgerNav.astro';
---

<style>
  .irc-container {
    max-width: 1000px;
    margin: 2rem auto;
    padding: 1rem;
    border-radius: 12px;
    background-color: #0d0f1c;
    box-shadow: 0 0 15px rgba(180, 142, 255, 0.4);
  }

  iframe.irc-frame {
    width: 100%;
    height: 600px;
    border: none;
    border-radius: 8px;
    background-color: #000;
  }

  .irc-footer {
    color: #888;
    font-size: 0.875rem;
    text-align: center;
    margin-top: 1rem;
  }

  .irc-footer a {
    color: #b48eff;
    text-decoration: underline;
  }

  .irc-footer a:hover {
    color: #c9c7ff;
  }
</style>

<HamburgerNav title={title}>
  <div class="irc-container">
    <h1 class="text-lavender text-xl font-bold mb-4 text-center">
      Join the Arynwood IRC Channel
    </h1>

    <iframe
  src="https://webchat.oftc.net/?nick=Guest123&channels=arynwood"
  class="irc-frame"
></iframe>

    <p class="irc-footer">
      Connected to <code>#arynwood</code> on <a href="https://libera.chat">libera.chat</a>.<br />
      Powered by <a href="https://kiwiirc.com">KiwiIRC</a>.
    </p>
  </div>
</HamburgerNav>

