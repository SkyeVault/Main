---
const title = "Arynwood IRC Chat";
import HamburgerNav from '../layouts/HamburgerNav.astro';
---

<style>
  .irc-frame {
    width: 100%;
    height: 600px;
    border: none;
    border-radius: 8px;
    background-color: #000;
    margin-top: 1.5rem;
  }

  .irc-header {
    text-align: center;
    font-family: monospace;
    font-size: 1.5rem;
    color: #b48eff;
    text-shadow: 0 0 3px #b48eff;
  }

  .irc-footer {
    text-align: center;
    font-size: 0.875rem;
    color: #888;
    margin-top: 1rem;
  }

  .irc-footer a {
    color: #b48eff;
    text-decoration: underline;
  }

  .irc-footer a:hover {
    color: #fff;
  }
</style>

<HamburgerNav title={title}>
  <div>
    <h1 class="irc-header">Join the Arynwood IRC Channel</h1>

    <iframe
      src="https://kiwiirc.com/nextclient/irc.libera.chat/#arynwood"
      class="irc-frame"
      loading="lazy"
      title="Arynwood Chat"
    ></iframe>

    <div class="irc-footer">
      Connected to <code>#arynwood</code> on <a href="https://libera.chat">Libera.Chat</a><br />
      Web chat powered by <a href="https://kiwiirc.com">KiwiIRC</a>
    </div>
  </div>
</HamburgerNav>
