---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      :root {
        --bg: #0d0f1c;
        --text: #c9c7ff;
        --accent: #b48eff;
        --link: #79b8ff;
        --hover: #b48eff;
        --box: #161822;
        --border: #2e254e;
      }

      body {
        margin: 0;
        background-color: var(--bg);
        color: var(--text);
        font-family: 'JetBrains Mono', monospace;
      }

      .menu-toggle {
        position: fixed;
        top: 1rem;
        left: 1rem;
        background: var(--box);
        border: 1px solid var(--border);
        color: var(--link);
        font-size: 1.2rem;
        padding: 0.5rem 0.75rem;
        border-radius: 4px;
        cursor: pointer;
        z-index: 1001;
      }

      nav {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 250px;
        background-color: var(--box);
        border-right: 1px solid var(--border);
        padding: 2rem 1rem;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 1000;
      }

      nav.open {
        transform: translateX(0);
      }

      nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      nav li {
        margin-bottom: 1rem;
      }

      nav a {
        color: var(--link);
        text-decoration: none;
        font-size: 1rem;
      }

      nav a:hover {
        color: var(--hover);
        text-decoration: underline;
      }

      .close-nav {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: none;
        border: none;
        color: var(--link);
        font-size: 1.2rem;
        cursor: pointer;
      }

      main {
        transition: margin-left 0.3s ease;
        margin-left: 0;
        padding: 5rem 2rem 2rem 2rem;
        max-width: 800px;
      }

      body.menu-open main {
        margin-left: 250px;
      }

      @media screen and (max-width: 600px) {
        main {
          padding-top: 6rem;
        }
      }
    </style>
  </head>
  <body>
    <button class="menu-toggle" id="menuToggle">☰ Menu</button>

    <nav id="nav">
      <button class="close-nav" id="closeNav">×</button>
      <ul>
        <li><a href="/">Terminal</a></li>
        <li><a href="/classic">Classic View</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/blog">DevLogs</a></li>
        <li><a href="/gallery3d">3D Gallery</a></li>
        <li><a href="/syrenwork">2D Gallery</a></li>
        <li><a href="/robot">Arynwood Robot</a></li>
        <li><a href="/lorelei">About</a></li>
        <li><a href="mailto:loreleihnoble@gmail.com">Contact</a></li>
      </ul>
    </nav>

    <main>
      <h1>{title}</h1>
      <slot />
    </main>

    <script is:global>
      document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('menuToggle');
        const nav = document.getElementById('nav');
        const close = document.getElementById('closeNav');

        toggle.addEventListener('click', () => {
          nav.classList.toggle('open');
          document.body.classList.toggle('menu-open');
        });

        close.addEventListener('click', () => {
          nav.classList.remove('open');
          document.body.classList.remove('menu-open');
        });
      });
    </script>
  </body>
</html>