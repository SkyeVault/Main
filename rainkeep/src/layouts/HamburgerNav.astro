---
const { title, children } = Astro.props;
---

<div>
  <button class="menu-toggle" onclick="document.getElementById('nav').classList.toggle('open')">â˜° Menu</button>

  <nav id="nav">
    <ul>
      <li><a href="/">Terminal</a></li>
      <li><a href="/classic">Classic View</a></li>
      <li><a href="/projects">Projects</a></li>
      <li><a href="/blog">DevLogs</a></li>
      <li><a href="/gallery3d">3D Gallery</a></li>
      <li><a href="/syrenwork">2D Gallery</a></li>
      <li><a href="/robot">Arynwood Robot</a></li>
      <li><a href="/lorelei">About</a></li>
      <li><a href="mailto:loreleihnoble@gmail.com">Contact</a></li>
    </ul>
  </nav>

  <main>
    <h1>{title}</h1>
    {children}
  </main>

  <style is:global>
    body {
      margin: 0;
      background-color: #0d0f1c;
      color: #c9c7ff;
      font-family: 'JetBrains Mono', monospace;
    }

    .menu-toggle {
      position: fixed;
      top: 1rem;
      left: 1rem;
      background: #161822;
      border: 1px solid #2e254e;
      color: #79b8ff;
      font-size: 1rem;
      padding: 0.6rem 1rem;
      border-radius: 4px;
      cursor: pointer;
      z-index: 1001;
    }

    nav {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      background-color: #161822;
      border-right: 1px solid #2e254e;
      padding: 2rem 1rem;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 1000;
    }

    nav.open {
      transform: translateX(0);
    }

    nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    nav li {
      margin-bottom: 1rem;
    }

    nav a {
      color: #79b8ff;
      text-decoration: none;
      font-size: 1rem;
    }

    nav a:hover {
      color: #b48eff;
      text-decoration: underline;
    }

    main {
      margin-left: 0;
      padding: 5rem 2rem 2rem 2rem;
      max-width: 800px;
    }

    @media (min-width: 768px) {
      main {
        margin-left: 0;
      }
    }
  </style>
</div>