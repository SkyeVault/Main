---
const { title, children } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      :root {
        --bg: #0d0f1c;
        --text: #c9c7ff;
        --accent: #b48eff;
        --link: #79b8ff;
        --hover: #b48eff;
        --box: #161822;
        --border: #2e254e;
      }

      body {
        margin: 0;
        background-color: var(--bg);
        color: var(--text);
        font-family: 'JetBrains Mono', monospace;
      }

      .menu-toggle {
        position: fixed;
        top: 1rem;
        left: 1rem;
        background: var(--box);
        border: 1px solid var(--border);
        color: var(--link);
        font-size: 1rem;
        padding: 0.6rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        z-index: 1001;
      }

      nav {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 250px;
        background-color: var(--box);
        border-right: 1px solid var(--border);
        padding: 2rem 1rem;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 1000;
      }

      nav.open {
        transform: translateX(0);
      }

      nav ul {
        list-style: none;
        padding: 0;
        margin: 2rem 0 0 0;
      }

      nav li {
        margin-bottom: 1rem;
      }

      nav a {
        color: var(--link);
        text-decoration: none;
        font-size: 1rem;
      }

      nav a:hover {
        color: var(--hover);
        text-decoration: underline;
      }

      .close-btn {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        background: none;
        border: none;
        color: var(--hover);
        font-size: 1.5rem;
        cursor: pointer;
      }

      main {
        margin-left: 0;
        padding: 5rem 2rem 2rem 2rem;
        max-width: 800px;
      }

      /* Classic View Styles */
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #010101;
        border-radius: 1px;
        box-shadow: 0 0 30px rgba(181, 103, 218, 0.8);
      }

      .section {
        margin-top: 2rem;
      }

      .link-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 1rem 0;
      }

      .link-row a {
        flex: 0 1 auto;
        font-size: 0.85rem;
        padding: 0.4rem 0.75rem;
        text-align: center;
        background-color: #161822;
        border: 1px solid var(--border);
        border-radius: 4px;
        transition: background 0.2s ease;
        min-width: 100px;
        max-width: 150px;
      }

      .link-row a:hover {
        background-color: #1f2130;
      }

      .back-link {
        display: block;
        margin-top: 3rem;
        text-align: right;
        font-size: 0.9rem;
        color: #888;
      }

      .back-link:hover {
        color: #b9aaff;
      }

      .note {
        font-size: 0.85rem;
        color: #888;
      }
    </style>
  </head>
  <body>
    <button class="menu-toggle" onclick="document.getElementById('nav').classList.toggle('open')">☰ Menu</button>

    <nav id="nav">
      <button class="close-btn" onclick="document.getElementById('nav').classList.remove('open')">×</button>
      <ul>
        <li><a href="/">Terminal</a></li>
        <li><a href="/classic">Classic View</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/blog">DevLogs</a></li>
        <li><a href="/gallery3d">3D Gallery</a></li>
        <li><a href="/syrenwork">2D Gallery</a></li>
        <li><a href="/robot">Arynwood Robot</a></li>
        <li><a href="/lorelei">About</a></li>
        <li><a href="mailto:loreleihnoble@gmail.com">Contact</a></li>
      </ul>
    </nav>

    <main>
      {children}
    </main>
  </body>
</html>