---
const { title, showFrame = true } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style is:global>
  :root {
    --bg: #0d0f1c;
    --text: #c9c7ff;
    --accent: #b48eff;
    --link: #79b8ff;
    --hover: #b48eff;
    --box: #161822;
    --border: #2e254e;
    --note: #888;
    --excerpt: #aaa8cc;
  }

  body {
  margin: 0 auto;
  background-color: var(--bg);
  color: var(--text);
  font-family: 'Courier New', monospace;
  padding: 1rem clamp(1rem, 4vw, 3rem);
  max-width: 600px;
  line-height: 1.6;
}

@media (min-width: 1024px) {
  body {
    max-width: 800px;
  }
}

@media (min-width: 1024px) {
  body {
    max-width: 960px;
  }
}

  h1 {
    color: var(--accent);
    text-shadow: 0 0 2px var(--accent);
  }

  h2, h3 {
    color: var(--accent);
    text-shadow: 1px 1px 0 var(--border);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  hr {
    border: none;
    height: 1px;
    background: linear-gradient(to right, var(--border), var(--accent), var(--border));
    opacity: 0.4;
    margin: 2rem 0;
  }

  a,
  a:visited,
  a:focus,
  a:active {
    color: var(--link);
    text-decoration: none;
  }

  a:hover {
    color: var(--hover);
    text-decoration: underline;
  }

  .note {
    font-size: 0.85rem;
    color: var(--note);
  }

  .excerpt {
    font-style: italic;
    color: var(--excerpt);
    margin-bottom: 1rem;
  }

  pre {
    background-color: var(--box);
    padding: 1rem;
    overflow-x: auto;
    border-left: 3px solid var(--accent);
    margin-bottom: 1.5rem;
  }

  code {
    font-family: 'Courier New', monospace;
    color: var(--text);
  }

  .prompt {
    color: var(--note);
    font-size: 0.9rem;
    display: block;
    margin-bottom: 1rem;
  }

  .link-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .button-link {
    background-color: var(--box);
    border: 1px solid var(--accent);
    color: var(--text);
    padding: 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .button-link:hover {
    background-color: var(--border);
    color: var(--accent);
  }

  .container,
  .section {
    margin-top: 2rem;
  }

  .menu-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    background: var(--box);
    border: 1px solid var(--border);
    color: var(--link);
    font-size: 1rem;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    cursor: pointer;
    z-index: 1001;
  }

  .menu-box {
    display: none;
    position: fixed;
    top: 3.5rem;
    right: 1rem;
    background: var(--box);
    border: 1px solid var(--border);
    padding: 1rem;
    z-index: 1000;
    box-shadow: 0 0 10px rgba(181, 103, 218, 0.3);
  }

  .menu-box.show {
    display: block;
  }

  .menu-box ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .menu-box li {
    margin-bottom: 0.75rem;
  }

  .menu-box a {
    color: var(--link);
    text-decoration: none;
  }

  .menu-box a:hover {
    color: var(--hover);
    text-decoration: underline;
  }

  .terminal-frame {
    background-color: var(--box);
    border: 1px solid var(--border);
    border-radius: 8px;
    box-shadow: 0 0 20px rgba(180, 142, 255, 0.1);
    padding: 1.5rem;
    margin: 3rem auto 2rem;
    max-width: 640px;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .terminal-buttons .btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.4);
  }

  .terminal-buttons .red { background-color: #ff5f56; }
  .terminal-buttons .yellow { background-color: #ffbd2e; }
  .terminal-buttons .green { background-color: #27c93f; }

  main {
    padding-bottom: 2rem;
  }
    </style>
