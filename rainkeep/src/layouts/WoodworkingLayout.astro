---
const { title, showFrame = true } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet" />
    <style is:global>
      :root {
        --bg: #0d0f0f;
        --text: #e0dfdb;
        --muted: #777;
        --accent: #88846f;
        --iron: #4e4e4e;
        --wood-dark: #2c2b28;
        --wood-medium: #3e3d37;
        --wood-light: #5c5a4e;
        --border: #2a2a2a;

        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;

        --text-xs: 0.75rem;
        --text-sm: 0.875rem;
        --text-base: 1rem;
        --text-lg: 1.25rem;
        --text-xl: 1.5rem;
        --text-2xl: 2rem;

        --radius: 4px;
        --shadow: rgba(0, 0, 0, 0.35);
      }

      body {
        margin: 0;
        background-color: var(--bg);
        color: var(--text);
        font-family: 'Space Grotesk', sans-serif;
        line-height: 1.6;
        font-size: var(--text-base);
        min-height: 100vh;
      }

      h1, h2, h3 {
        font-family: 'Fira Code', monospace;
        font-weight: 600;
        color: var(--accent);
        margin-top: var(--space-xl);
        margin-bottom: var(--space-md);
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }

      a:hover {
        color: var(--text);
        text-decoration: underline;
      }

      .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: var(--space-lg);
      }

      .gallery-frame {
        background: var(--wood-dark);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: var(--space-2xl);
        box-shadow: 0 0 10px var(--shadow);
      }

      .menu-toggle {
        background: var(--iron);
        color: var(--text);
        border: none;
        padding: 0.5rem 1rem;
        font-family: 'Fira Code', monospace;
        cursor: pointer;
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 999;
      }

      .menu-box {
        position: fixed;
        top: 3.5rem;
        right: 1rem;
        background: var(--wood-medium);
        border: 1px solid var(--border);
        padding: var(--space-md);
        display: none;
        z-index: 998;
      }

      .menu-box.show {
        display: block;
      }

      .menu-box ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .menu-box li {
        margin-bottom: var(--space-sm);
      }

      .menu-box a {
        color: var(--muted);
      }

      .menu-box a:hover {
        color: var(--text);
      }

      footer {
        margin-top: var(--space-2xl);
        text-align: center;
        color: var(--muted);
        font-size: var(--text-sm);
        border-top: 1px solid var(--border);
        padding: var(--space-lg);
      }
    </style>

    <!-- Matomo -->
    <script>
      var _paq = window._paq = window._paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u = "https://track.arynwood.com/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <!-- End Matomo -->
  </head>

  <body>
    <button class="menu-toggle" id="menuToggle">Menu</button>
    <nav class="menu-box" id="menuBox">
      <ul>
        <li><a href="/woodworking">Home</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
        <li><a href="/commissions">Commissions</a></li>
        <li><a href="/studio">Studio</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>

    <div class="container">
      {showFrame ? (
        <article class="gallery-frame">
          <main>
            <h1>{title}</h1>
            <slot />
          </main>
        </article>
      ) : (
        <main>
          <h1>{title}</h1>
          <slot />
        </main>
      )}
    </div>

    <script is:global>
      document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('menuToggle');
        const box = document.getElementById('menuBox');
        toggle.addEventListener('click', () => {
          box.classList.toggle('show');
        });
        document.addEventListener('click', (e) => {
          if (!box.contains(e.target) && e.target !== toggle) {
            box.classList.remove('show');
          }
        });
      });
    </script>

    <footer>
      <div class="container">
        <p>&copy; 2025 Arynwood Design. All rights reserved.</p>
        <p>Handcrafted in Bucks County, Pennsylvania</p>
      </div>
    </footer>
  </body>
</html>

