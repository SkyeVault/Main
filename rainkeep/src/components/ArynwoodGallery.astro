---
const artworks = Array.from({ length: 34 }, (_, i) =>
  `/arynwood/Untitled_Artwork%20${i + 1}.png`
);
---

<!-- Lightbox2 CSS (safe even if already imported in parent) -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/css/lightbox.min.css"
  rel="stylesheet"
/>

<section class="px-4 py-10 max-w-screen-xl mx-auto">
  <div class="grid gap-y-10 gap-x-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    {artworks.map((src, index) => (
      <a
        href={src}
        data-lightbox="gallery"
        data-title={`Untitled Artwork ${index + 1}`}
        class="relative group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300"
      >
        <img
          src={src}
          alt={`Untitled Artwork ${index + 1}`}
          class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-300 ease-in-out rounded"
          loading="lazy"
        />
      </a>
    ))}
  </div>
</section>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/js/lightbox.min.js"
  defer
></script>