---
const artworks = Array.from({ length: 34 }, (_, i) => `/arynwood/Untitled_Artwork ${i + 1}.png`);
---

<section class="px-4 py-8 max-w-screen-xl mx-auto">
  <h2 class="text-3xl font-bold text-center mb-8">Arynwood Collection</h2>
  <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    {artworks.map((src, index) => (
      <div class="relative group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
        <img
          src={src}
          alt={`Untitled Artwork ${index + 1}`}
          class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-300 ease-in-out"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</section>