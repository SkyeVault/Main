---
const artworks = Array.from({ length: 34 }, (_, i) =>
  `/arynwood/Untitled_Artwork%20${i + 1}.png`
);
---

<link
  href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/css/lightbox.min.css"
  rel="stylesheet"
/>

<style>
  .masonry {
    column-count: 1;
    column-gap: 1rem;
  }

  @media (min-width: 640px) {
    .masonry {
      column-count: 2;
    }
  }

  @media (min-width: 768px) {
    .masonry {
      column-count: 3;
    }
  }

  @media (min-width: 1024px) {
    .masonry {
      column-count: 4;
    }
  }

  .masonry-item {
    break-inside: avoid;
    margin-bottom: 1.5rem;
    display: block;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 10px rgba(180, 142, 255, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  .masonry-item:hover img {
    transform: scale(1.03);
  }

  .masonry-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease-in-out;
  }

  .spinner {
    display: flex;
    justify-content: center;
    margin: 4rem 0;
  }

  .spinner::after {
    content: "";
    width: 40px;
    height: 40px;
    border: 4px solid #b48eff;
    border-top: 4px solid transparent;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .hidden {
    display: none;
  }
</style>

<section class="px-4 py-10 max-w-screen-xl mx-auto">
  <!-- Spinner -->
  <div id="loader" class="spinner"></div>

  <!-- Gallery -->
  <div id="gallery" class="masonry hidden">
    {artworks.map((src, index) => (
      <a
        href={src}
        data-lightbox="gallery"
        data-title={`Untitled Artwork ${index + 1}`}
        class="masonry-item"
      >
        <img
          src={src}
          alt={`Untitled Artwork ${index + 1}`}
          loading="lazy"
          onload="handleImageLoad()"
        />
      </a>
    ))}
  </div>
</section>

<script>
  let loadedImages = 0;
  const totalImages = {artworks.length};
  const loader = document.getElementById('loader');
  const gallery = document.getElementById('gallery');

  function handleImageLoad() {
    loadedImages++;
    if (loadedImages >= totalImages) {
      loader.classList.add('hidden');
      gallery.classList.remove('hidden');
    }
  }
</script>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/js/lightbox.min.js"
  defer
></script>